generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderType {
  LIMIT
  MARKET
}

enum OrderSide {
  BUY
  SELL
}

model Order {
  id             String    @id @default(uuid())
  creatorAddress String
  tokenA         String
  tokenB         String
  amountA        Decimal
  amountB        Decimal
  amountLeftToFill Decimal
  isActive       Boolean
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt
  orderType      OrderType @default(LIMIT) // тип ордера: 'LIMIT' или 'MARKET'
  orderSide      OrderSide // сторона ордера: 'BUY' или 'SELL'
  filled         Decimal   @default(0) // количество смэтченных токенов

  @@index([tokenA, tokenB, creatorAddress], name: "order_search_index")
}

